#!/bin/sh

if [ $# -ge 1 ] ; then
  PROJECTS="$@";
else
  PROJECTS="extras utils znzlib niftiio fslio miscmaths \
newimage libhfunc libss libvis meshclass misc_tcl bint \
avwutils bet2 cluster fast fdt feat5 film filmbabe flame flirt fabber \
fslpres fslvbm fugue mcflirt melodic misc_c miscvis mm \
randomise siena slicetimer susan tbss basisfield \
ifit load_varian misc_scripts fast4 shapeModel first fnirt possum sgeutils";
fi

echo "Building projects - see build.log file for progress..."
./config/common/buildproj $PROJECTS > ./build.log 2>&1
echo "Finished build : end of log file shows ..."
tail -10 build.log

